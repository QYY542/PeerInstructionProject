<view class="container">
  <!-- 问题视图 -->
  <view class="question">
    <text class="question-text" user-select="true">{{questionText}}</text>
    <image class="question-image" wx:if="{{imageSrc}}" src="{{imageSrc}}" mode="aspectFit" bindtap="previewImage"/>
  </view>

  <!-- 分隔线 -->
  <view class="separator"></view>
  
  <!-- 选项容器 -->
  <view class="options-container" wx:if="{{isAnswerPublished != 'True'}}">
    <block wx:for="{{options}}" wx:key="option">
      <view class="option" data-index="{{index}}" bindtap="{{!isAnswerPaused ? 'onOptionTap' : ''}}">
        <!-- ABCD -->
        <view class="option-prefix">{{item.option}}</view>
        <!-- 按钮 -->
        <view class="option-btn {{item.selected ? 'selected' : ''}}">
          <!-- 按钮文本 -->
          <text class="option-text">{{item.text}}</text>
        </view>
      </view>
    </block>
  </view>



<!-- 选项容器(公布答案后) -->
<view class="options-container" wx:if="{{isAnswerPublished == 'True'}}">
  <block wx:for="{{options}}" wx:key="option">
    <view class="option" data-index="{{index}}">
      <!-- ABCD -->
      <view class="option-prefix">{{item.option}}</view>
      <!-- 按钮 -->
      <view class="option-btn {{item.correct ? 'correct' : (item.selected && item.correct === false ? 'wrong' : '')}}">
        <!-- 按钮文本 -->
        <text class="option-text">{{item.text}}</text>
      </view>
    </view>
  </block>
</view>

  <!-- 倒计时 -->
  <text class="timer" user-select="true" wx:if="{{isAnswerPublished != 'True' && !timeup && !choosed}}">剩余时间：{{remainingTime}}秒</text>
  <text class="timer" user-select="true" wx:if="{{isAnswerPublished == 'True'}}">已经公布答案</text>

  <text class="timer" user-select="true" wx:if="{{currentAttempt===1}}">第一次发布</text>
  <text class="timer" user-select="true" wx:if="{{currentAttempt===2}}">第二次发布</text>

  <!-- 提交按钮 -->
  <button class="submit-btn" bindtap="onSubmit" disabled="{{isAnswerPublished == 'True'|| timeup || choosed}}">提交答案</button>
</view>