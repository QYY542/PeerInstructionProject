
.header {
  text-align: center;
  font-weight: bold;
  padding: 10rpx 0;
  background-color: #e6e6e6;
}

.greeting {
  text-align: center;
  margin: 10rpx 0;
  color: #333;
  font-size: 28rpx;
}

.list-container {
  padding: 20rpx;
  margin-top: 20rpx;
  border-radius: 20rpx;
  background-color: #fff;
  height: 60vh;
  overflow-y: auto;
  border: 2rpx solid black; /* 添加外部的黑框 */
}

.list-title {
  position: sticky;  /* 使其固定在顶部 */
  top: 0;  /* 定位至容器的顶部 */
  z-index: 1;  /* 使其始终在其他内容的上面 */
}


.list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #ddd;
  background-color: #dfb8b8;
  border-radius: 15rpx;
  margin-bottom: 10rpx;  /* 增加每个item之间的距离 */
  
}


.item-name {
  flex: 1;
  font-size: 28rpx;
  width: 65%;
  white-space: normal;  /* 允许文本自动换行 */
  word-wrap: break-word;  /* 如果需要的话，允许单词内的断行 */
  display: -webkit-box;  /* 使用box模型 */
  -webkit-line-clamp: 2;  /* 限制在两行 */
  -webkit-box-orient: vertical;  /* 设置为垂直方向 */
  overflow: hidden;  /* 隐藏多余的文本 */
}


.delete-btn {
  display: flex;         /* 使用flex布局 */
  justify-content: center; /* 水平居中 */
  align-items: center;     /* 垂直居中 */
  flex: 0;
  background-color: #ff4c4c;
  color: #fff;
  border-radius: 20rpx;
}


.add-btn {
  margin-top: 20rpx;
  background-color: #000;
  color: #fff;
  padding: 10rpx;
  text-align: center;
}
