<view class="container">
  <!-- 标签部分 -->
  <view class="tags-input">
    <view wx:for="{{tags}}" wx:key="index" class="tag">
        <text>{{item}}</text>
        <view bindtap="deleteTag" data-index="{{index}}" class="delete-tag">x</view>
    </view>
    <input placeholder="输入后按空格添加新标签" value="{{currentTag}}" bindinput="inputTag" bindconfirm="handleConfirm" class="input-tag" />
  </view>

  <view class="pikerList">
<!-- 选择时间（仅年份） -->
  <picker mode="selector" range="{{yearRange}}" value="{{selectedYearIndex}}" bindchange="bindYearChange">
    <view class="picker">
      <text>{{selectedYear || '时间'}}</text>
    </view>
  </picker>



<!-- 选择学科 -->
  <picker mode="selector" range="{{subjects}}" value="{{selectedSubjectIndex}}" bindchange="bindSubjectChange">
    <view class="picker">
      <text>{{selectedSubject || '学科'}}</text>
    </view>
  </picker>


<!-- 选择难度 -->
  <picker mode="selector" range="{{difficulties}}" value="{{selectedDifficultyIndex}}" bindchange="bindDifficultyChange">
    <view class="picker">
      <text>{{selectedDifficulty || '难度'}}</text>
    </view>
  </picker>
</view>

  <!-- 列表容器 -->
  <view class="list-container">
    
    <view class="list" wx:for="{{itemsShow}}" wx:key="index">
      <!-- 每个题目 -->
      <checkbox-group bindchange="onCheckboxGroupChange" data-index="{{index}}">
      <view class="list-item-bank" data-index="{{index}}">
        <checkbox class="item-checkbox" value="{{item.selected}}" data-index="{{index}}" checked="{{item.selected}}"></checkbox>
        <text class="item-name" data-index="{{index}}">{{item.name}}</text>
        <image class="item-image" src="" mode="aspectFit"/>
    </view>
  </checkbox-group>
  </view>
 
</view>

<button class="darkBtn" bindtap="addItem">确认添加</button>
</view>