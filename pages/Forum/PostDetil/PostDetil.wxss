

.post-detail {
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.post-title-section {
  display: flex;
  flex-direction: column;
}
.post-title-section .post-title {
  font-size: 40rpx;  /* 设置字体大小 */
  font-weight: bold;  /* 设置字体为加粗 */
  color: #333;
}

.post-title-section .post-content {
  font-size: 30rpx;
  color: #666;
  word-wrap: break-word;  /* 允许在单词内断行 */
  white-space: normal;  /* 允许文本自动换行 */
}

.post-title-section .post-time {
  font-size: 30rpx;
  color: #666;
  margin-top: 10rpx;
}

.separator {
  height: 3rpx;
  background-color: #ddd;
  margin: 20rpx 0;
}
.post-content-section{
  display: flex;
  flex-direction: column;
  min-height: 150rpx;  /* 设置最小高度为 200rpx */
}
.post-content-section .post-content {
  font-size: 30rpx;
  color: #666;
  word-wrap: break-word;  /* 允许在单词内断行 */
  white-space: normal;  /* 允许文本自动换行 */
}

.comment-list-section {
  flex: 1;
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 10rpx;
}

.comment-count {
  font-size: 25rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.comment-list {
  flex: 1;
}

.list-item {
  background-color: rgba(109, 109, 109, 0.7); /* 使颜色半透明 */
  backdrop-filter: blur(100px); /* 添加模糊效果 */
  margin-bottom: 20rpx;
  padding: 5rpx;
  border-radius: 25rpx;
  display: flex;
  flex-direction: column;
}


.list-item-2 {
  background-color: rgb(255, 255, 255);
  padding: 20rpx;
  border-radius: 25rpx;
  display: flex;
  flex-direction: column;
  
}

.comment-author, .comment-time, .comment-content {
  margin-bottom: 10rpx;
  word-wrap: break-word;  /* 允许在单词内断行 */
  white-space: normal;  /* 允许文本自动换行 */
}

.comment-author {
  font-weight: bold;
  color: #333;
}

.comment-time {
  font-size: 25rpx;
  color: #666;
}

.comment-content {
  color: #666;
}
